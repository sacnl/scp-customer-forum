<mvc:View
	controllerName="sap.ui.demo.addressmgr.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic">
	<semantic:DetailPage
		id="page"
		title="{i18n>detailTitle}"
		busy="{detailView>/busy}">
		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				title="{
					parts: [
						{ path: 'details>/IsMale' },
						{ path: 'details>/IsFemale' },
						{ path: 'details>/FirstName' },
						{ path: 'details>/LastName' }
					],
					formatter: '.formatter.salutation'
				}">
				<attributes>
					<ObjectAttribute text="{
						path: 'details>/BusinessPartner',
						formatter: '.formatter.businessPartnerId'
					}" />
					<ObjectAttribute active="true" title="{i18n>position}" text="{details>/SearchTerm1}" press="onTranslatePosition" />
					<ObjectAttribute active="true" title="{i18n>email}" text="{details>/MiddleName}" />
					<ObjectAttribute text="{
						path: 'details>/CreationDate',
						formatter: '.formatter.creationDateValue'
					}"/>
					<ObjectAttribute text="{
						path: 'details>/YY1_AddrLastCheckedBy_bus',
						formatter: '.formatter.lastCheckedBy'
					}"/>
					<ObjectAttribute text="{
						path: 'details>/YY1_AddrLastCheckedOn_bus',
						formatter: '.formatter.lastCheckedDateValue'
					}"/>
					<ObjectAttribute visible="{= !${blacklist>/StatusLoading}}"
						text="{
							parts: [
								{ path: 'blacklist>/StatusKnown' },
								{ path: 'blacklist>/Status' }
							],
							formatter: '.formatter.blacklistStatus'
					}" />
					<ObjectAttribute visible="{blacklist>/StatusLoading}" text="{i18n>retrievingBlacklist}" />
				</attributes>
			</ObjectHeader>
			<Button
				id="checkedAddressesButton"
				text="{i18n>checkAddressButton}"
				icon="sap-icon://complete"
				width="auto"
				press="onMarkAddressesChecked"
				class="sapUiResponsiveMargin"
				/>
			<Button
				id="addToBlacklistButton"
				text="{i18n>addToBlacklistButton}"
				icon="sap-icon://private"
				width="auto"
				press="onAddToBlacklist"
				class="sapUiResponsiveMargin"
				visible="{= ${blacklist>/StatusKnown} &amp;&amp; ${blacklist>/Status} &lt; 1}"
				/>
			<Button
					id="removeFromBlacklistButton"
					text="{i18n>removeFromBlacklistButton}"
					icon="sap-icon://private"
					width="auto"
					press="onRemoveFromBlacklist"
					class="sapUiResponsiveMargin"
					visible="{= ${blacklist>/StatusKnown} &amp;&amp; ${blacklist>/Status} &gt; 0}"
					/>
			<Table
				id="addressList"
				width="auto"
				items="{details>/to_BusinessPartnerAddress}"
				noDataText="{i18n>noAddressesText}"
				class="sapUiResponsiveMargin">
				<headerToolbar>
					<Toolbar id="lineItemsToolbar">
						<Title
							id="lineItemsHeader"
							text="{
								path: 'details>/to_BusinessPartnerAddress',
								formatter: '.formatter.addressListTitle'
							}"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="onAddAddress" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>street}"/>
					</Column>
					<Column>
						<Text text="{i18n>city}"/>
					</Column>
					<Column>
						<Text text="{i18n>country}"/>
					</Column>
					<Column hAlign="End">
						<Text text="{i18n>actions}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{details>StreetName} {details>HouseNumber}" />
							<Text text="{details>PostalCode} {details>CityName}" />
							<Text text="{details>Country}" />
							<HBox justifyContent="End">
								<Button type="Transparent" icon="sap-icon://edit" press="onEditAddress" />
								<Button type="Transparent" icon="sap-icon://delete" press="onDeleteAddress" />
							</HBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<Table
				id="socialMediaAccountList"
				width="auto"
				items="{socialMedia>/}"
				noDataText="{i18n>noAccountsText}"
				class="sapUiResponsiveMargin">
				<headerToolbar>
					<Toolbar id="accountsToolbar">
						<Title
							id="accountsHeader"
							text="{
								path: 'socialMedia>/',
								formatter: '.formatter.accountsListTitle'
							}"/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>service}"/>
					</Column>
					<Column>
						<Text text="{i18n>account}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{socialMedia>Service}" />
							<Text text="{socialMedia>Account}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
